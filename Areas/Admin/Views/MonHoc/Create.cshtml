@using Elearning.Areas.Admin.Models
@model Subject

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm môn học mới</h2>
    </div>

    <form asp-area="Admin" asp-controller="MonHoc" asp-action="CreateConfirm" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <section class="section">
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Thông tin môn học</h5>

                            <div class="mb-3">
                                <label asp-for="SubjectName" class="form-label">Tên môn học</label>
                                <input asp-for="SubjectName" class="form-control" />
                                <span asp-validation-for="SubjectName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Mô tả</label>
                                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="text-end">
                                <button type="submit" class="btn btn-primary">Lưu lại</button>
                                <a asp-area="Admin" asp-controller="MonHoc" asp-action="Index" class="btn btn-secondary">Hủy</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
</main>


