@using Elearning.Areas.Admin.Models
@model Subject

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Chi tiết môn học</h2>
    </div>

    <div class="mb-3">
        <a asp-area="Admin" asp-controller="MonHoc" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-list"></i> Danh sách
        </a>

        <button id="editBtn" type="button" class="btn btn-primary" onclick="enableEdit()">
            <i class="bi bi-pencil"></i> Chỉnh sửa
        </button>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-12">
                <form asp-area="Admin" asp-controller="MonHoc" asp-action="Edit" method="post" class="card">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="SubjectId" value="@Model?.SubjectId" />

                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Tên môn học</label>
                            <input id="SubjectName" name="SubjectName" value="@Model?.SubjectName" class="form-control editable" disabled />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea id="Description" name="Description" class="form-control editable" rows="6" disabled>@Model?.Description</textarea>
                        </div>

                        <div class="mt-3">
                            <button id="saveBtn" type="submit" class="btn btn-success" style="display:none">Lưu thay đổi</button>
                            <button id="cancelBtn" type="button" class="btn btn-secondary" style="display:none" onclick="location.reload()">Hủy</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <script>
        function enableEdit() {
            document.querySelectorAll('.editable').forEach(function (el) { el.removeAttribute('disabled'); });
            document.getElementById('saveBtn').style.display = 'inline-block';
            document.getElementById('cancelBtn').style.display = 'inline-block';
            document.getElementById('editBtn').style.display = 'none';
        }
    </script>
}
