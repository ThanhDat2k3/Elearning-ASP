@using Elearning.Areas.Admin.Models;
@using Elearning.Utilities;
@model IList<vwTeacherInfo>

<ul class="gv-list clearfix">
    @{
        var gv = Model?.Take(8).ToList() ?? new List<vwTeacherInfo>();
        foreach (var i in gv)
        {
            var name = string.IsNullOrWhiteSpace(i.TenGiangVien) ? "NoName" : i.TenGiangVien;
            
            var link = $"/GiaoVien/Details/{i.TeacherId}/{name}";
            var imgSrc = string.IsNullOrWhiteSpace(i.AnhDaiDien) ? Url.Content("~/images/no-avatar.png") : Url.Content(i.AnhDaiDien.Replace("\\", "/"));
           
             <li class="gv-item-wr">
                <div class="gv-item">
                    <div class="gv-image">
                        <a href="@link" target="_blank">
                            <img src="@imgSrc" alt="@i.TenGiangVien" />
                        </a>
                    </div>
                    <div class="gv-caption">
                        <p class="gv-name"><a href="@link" target="_blank">@i.TenGiangVien</a></p>
                        <p class="gv-school">@i.NoiCongTac</p>
                        <div class="gv-desc">
                            <p style="text-align:justify">@i.GioiThieu</p>
                        </div>
                    </div>
                    <div class="gv-viewmore"><a href="@link" target="_blank">Chi tiáº¿t</a></div>
                </div>
            </li>
        }
    }
</ul>